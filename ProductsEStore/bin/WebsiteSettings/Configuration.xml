<?xml version="1.0" encoding="utf-8"?>
<configuration xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema">
  <websiteSettings>
    <siteName>MyeBook</siteName>
    <siteTagline>free eBooks Store</siteTagline>
    <siteDomain>www.myebook.net</siteDomain>
    <pageTitleTemplate>{{TITLE}} - {{SITE_NAME}}</pageTitleTemplate>
  </websiteSettings>
  <logManagerSettings enable="true" overWrite="true">
    <Listeners>
      <Listener listenerType="html" path="c:\sample.html" />
      <Listener listenerType="xml" path="c:\sample.xml" />
    </Listeners>
  </logManagerSettings>
  <displaySettings>
    <SitePages>
      <sitePage name="homePage">
        <layout viewType="grid" columns="4" pageSize="8" />
        <pager size="7" />
      </sitePage>
      <sitePage name="categoryPage">
        <layout viewType="list" columns="4" pageSize="16" />
        <pager size="5" />
      </sitePage>
      <sitePage name="searchPage">
        <layout viewType="list" columns="4" pageSize="16" />
        <pager size="5" />
      </sitePage>
      <sitePage name="newReleasePage">
        <layout viewType="list" columns="4" pageSize="16" />
        <pager size="5" />
      </sitePage>
      <sitePage name="mostReviewsPage">
        <layout viewType="list" columns="4" pageSize="16" />
        <pager size="5" />
      </sitePage>
      <sitePage name="yearlyMonthlyPage">
        <layout viewType="grid" columns="4" pageSize="16" />
        <pager size="5" />
      </sitePage>
    </SitePages>
    <sitemapPage>
      <popularTags totalItems="15" />
      <popularAuthorTags totalItems="15" />
      <popularPublisherTags totalItems="15" />
      <recentProducts totalItems="15" />
      <productsByMonth>
        <relative totalMonthsFromCurrent="36" enabled="true" />
        <fixed fromYear="2015" fromMonth="1" enabled="false" />
      </productsByMonth>
    </sitemapPage>
  </displaySettings>
</configuration>