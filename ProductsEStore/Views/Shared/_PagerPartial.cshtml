@model ProductsEStore.Models.Pager
@{
    int i = 0;
    string className = "";
}
@if (@Model.IsRenderable)
{
    <nav aria-label="Page navigation">
        <ul class="pagination pagination-sm">
            @if (@Model.IsFirstEnabled)
            {
                <li><a href="@Url.Action("index", new { pageNo = 1 })" ><span aria-hidden="true">&laquo;&laquo;</span>
                </a></li>
            }
            else
            {
                <li class="disabled"><a href="@Url.Action("index", new { pageNo = 1 })" ><span aria-hidden="true">
                    &laquo;&laquo;</span> </a></li>
            }
            @if (@Model.IsPreviousEnabled)
            {
                <li><a href="@Url.Action("index", new { pageNo = @Model.CurrentPageIndex - 1 })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span> </a></li>
            }
            else
            {
                <li class="disabled"><a href="" aria-label="Previous"><span aria-hidden="true">&laquo;</span>
                </a></li>
            }
            @for (i = @Model.StartIndex; i <= @Model.EndIndex; i++)
            {
                className = "";
                if (i == @Model.CurrentPageIndex)
                {
                    className = "active";
                }
                <li class="@className">@Html.ActionLink(@i.ToString(), "index", new { pageNo = @i })</li>
            }
            @if (@Model.IsNextEnabled)
            {
                <li><a href="@Url.Action("index", new { pageNo = @Model.CurrentPageIndex + 1 })" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span> </a></li>
            }
            else
            {
                <li class="disabled"><a href="" aria-label="Next"><span aria-hidden="true">&raquo;</span>
                </a></li>
            }
            @if (@Model.IsLastEnabled)
            {
                <li><a href="@Url.Action("index", new { pageNo = @Model.TotalPages })"><span aria-hidden="true">
                    &raquo;&raquo;</span> </a></li>
            }
            else
            {
                <li class="disabled"><a href="@Url.Action("index", new { pageNo = @Model.TotalPages })">
                    <span aria-hidden="true">&raquo;&raquo;</span> </a></li>
            }
        </ul>
    </nav>
}