<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <webSiteSettings>
    <siteName>MyeBook</siteName>
    <SiteTagLine>free eBooks Store</SiteTagLine>
    <SiteDomain>www.myebook.net</SiteDomain>
    <pageTitleTemplate>{{TITLE}} - {{SITE_NAME}}</pageTitleTemplate>
  </webSiteSettings>
  <logManager enable="true" overwrite="true">
    <add listenerType="html" path="C:\Users\Vamsi\Desktop\ProductsEStoreLog\ProducsEStore_LOG.html" />
    <add listenerType="xml" path="" />
  </logManager>
  <displaySettings>
    <homePage>
      <layout viewType="grid" columns="4" products="16" />
      <pager size="5" />
    </homePage>
    <categoryPage>
      <layout viewType="grid" columns="4" products="16" />
      <pager size="5" />
    </categoryPage>
    <mostReviewsPage>
      <layout viewType="grid" columns="4" products="16" />
      <pager size="5" />
    </mostReviewsPage>
    <newReleasesPage>
      <layout viewType="grid" columns="4" products="16" />
      <pager size="5" />
    </newReleasesPage>
    <searchPage>
      <layout viewType="grid" columns="4" products="16" />
      <pager size="5" />
    </searchPage>
    <sitemapPage>
      <layout viewType="grid" columns="4" products="16" />
      <pager size="5" />
      <popularTags totalItems="10" />
      <popularAuthorTags totalItems="50" />
      <popularPublisherTags totalItems="50" />
      <recentBooks totalItems="20" />
      <booksByMonth>
        <relative totalMonthsFromCurrent="12"  enabled="true"/>
        <fixed fromYear="2011"   fromMonth="1" enabled="false"/>
      </booksByMonth>
    </sitemapPage>
  </displaySettings>
</configuration>
